<UserControl x:Class="PointOfSale.MainOrderMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
	<!-- The Main Grid Setup -->
	<Grid Name="uxMainOrderMenuGrid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition/>
			<ColumnDefinition Width="25*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="60*"/>
			<RowDefinition Height= "5*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<!--Starting to fill in the sections-->
		<!-- Edge Borders -->
		<Border Name="TopEdgeBorder" Background="Coral" Grid.ColumnSpan ="5"/>
		<Border Name="LeftEdgeBorder" Background="Coral" Grid.RowSpan="4"/>
		<Border Name="BottomEdgeBorder" Background="Coral" Grid.Row ="3" Grid.ColumnSpan ="5"/>
		<Border Name="RightEdgeBorder" Background="Coral" Grid.Column="4" Grid.RowSpan="4"/>
		<Border Name="SeperatorBorder" Background="Coral" Grid.Column="2" Grid.RowSpan="4"/>
		<!-- Add in the Menu -->
		<Border Name="uxOrderMenuBorder" Background="Aquamarine" Grid.Column="1" Grid.Row="1">
			<Border.Resources>
				<Style x:Key="uxNavButtons" TargetType="Control">
					<Setter Property="Background" Value="DarkBlue"/>
					<Setter Property="Foreground" Value="Yellow"/>
					<Setter Property="FontSize" Value="20"/>
					<Setter Property="Margin" Value="40,10"/>
					<Setter Property="FontWeight" Value="Bold"/>
				</Style>
				<Style TargetType="Button" BasedOn="{StaticResource uxNavButtons}"/>
				<Style x:Key="uxListBoxStyle" TargetType="Control">
					<Setter Property="FontSize" Value="20"/>
					<Setter Property="Margin" Value="40,10"/>
					<Setter Property="FontWeight" Value="Bold"/>
				</Style>
				<Style TargetType="ListBox" BasedOn="{StaticResource uxListBoxStyle}"/>
			</Border.Resources>
		</Border>
		<!-- Add Reciept/Order Details -->
		<Border Name ="uxOrderSummaryBorder" Background="White" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2"/>
		<!-- Nav Buttons -->
		<Grid Name="uxNavigationGrid" Grid.Column="1" Grid.Row="2" Background="Aquamarine">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Name="uxCancelButton" Click="OrderCancelledClick" Grid.Column="0"
					Background="DarkBlue" Foreground="Yellow" FontSize="16"
					Margin="5,2" FontWeight="Bold">Cancel Order</Button>
			<Button Name="uxPlaceOrderButton" Click="OrderCompleteClick" Grid.Column="3"
					Background="DarkBlue" Foreground="Yellow" FontSize="16"
					Margin="5,2" FontWeight="Bold">Place Order</Button>
		</Grid>
	</Grid>
</UserControl>
